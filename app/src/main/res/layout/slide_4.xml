<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_slide_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="@dimen/img_slide_width"
            android:layout_height="@dimen/img_slide_height"
            android:src="@drawable/golf"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_margin_top"
            android:textSize="@dimen/slide_tittle"
            android:textStyle="bold"
            android:text="@string/slide_4_title"
            android:textColor="@color/color_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/desc_margin_top"
            android:textSize="@dimen/slide_desc"
            android:textAlignment="center"
            android:text="@string/slide_4_desc"
            android:textColor="@color/color_white"/>

    </LinearLayout>
</RelativeLayout>